<h2>Login</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: 'form-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'form-label' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %><br>
  </div>
  
  <!--
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label "Manter Login" %>
      </div>
    <% end %> 
  -->

  <div class="actions">
    <div class="row">
      <div class="col-2"><%= f.submit "Login", class: "btn btn-primary" %></div>
      <div class="col-4"><%= link_to "Esqueceu sua senha?", new_password_path(resource_name), id: 'password-redefinition-link', class: 'btn btn-primary' %><br /></div>
      <div class="col-3"><%= link_to "Cadastre-se", new_registration_path(resource_name), id: 'subscribe-link', class: 'btn btn-primary' %><br /></div>
    </div>
  </div>
<% end %>




