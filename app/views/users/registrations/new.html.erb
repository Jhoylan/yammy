<h1 id="subscribe-signup">Cadastre-se</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <h2 class="signup-labels"><%= f.label :email, class: 'form-label' %></h2>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="field">
    <h2 class="signup-labels"><%= f.label :password,"Senha",class: 'form-label' %></h2>
    <% if @minimum_password_length %>
    <em>(no mÃ­nimo <%= @minimum_password_length %> caracteres)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="field">
    <h2 class="signup-labels"><%= f.label :password_confirmation, "Confirme sua Senha", class: 'form-label' %></h2>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %><br>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>

